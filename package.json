{
  "name": "email-forwarder",
  "version": "1.0.0",
  "description": "forwards emails sent to your aws managed another address",
  "main": "index.js",
  "scripts": {
    "build": "npm run archive",
    "archive": "npm run assemble && mkdir -p ./build/lib && cd ./build/js/main && zip -r ../../lib/email-forwarder.zip *",
    "assemble": "npm run clean && npx tsc",
    "clean": "rm -rf ./build",
    "test": "NODE_ENV=test mocha -r ts-node/register src/test/*.spec.ts src/test/**/*.spec.ts",
    "test-email": "NODE_ENV=test mocha -r ts-node/register src/test/index.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/organize-me/email-forwarder.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/organize-me/email-forwarder/issues"
  },
  "homepage": "https://github.com/organize-me/email-forwarder#readme",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.115",
    "@types/chai": "^4.3.5",
    "@types/config": "^3.3.0",
    "@types/lambda-tester": "^3.6.2",
    "@types/mocha": "^10.0.1",
    "@types/nodemailer": "^6.4.7",
    "aws-sdk": "^2.1376.0",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "serverless-offline": "^12.0.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "config": "^3.3.9",
    "lambda-tester": "^4.0.1",
    "nodemailer": "^6.9.2"
  }
}
